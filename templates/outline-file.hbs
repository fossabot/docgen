sidebars:
{{#each products as |product|}}
{{#with product}}

    #
    # {{{label}}} sidebar
    #
    - label: "{{{productId}}}-sidebar"
      path: "{{#if path}}{{{path}}}/{{/if}}{{{productId}}}"
      items:

         #
         # {{{label}}} parent index page
         #
          - label: "{{{label}}} parent index page"
            title: "Welcome to {{{label}}} parent index page"
            # slug: "{{{productId}}}"
            brief: "This is a placeholder for content you will add later"

         #
         # {{{label}}} documentation top page
         #
          - label: "{{{label}}} documentation"
            title: "Welcome to {{{label}}} documentation"
            slug: "{{{productId}}}-documentation"
            brief: "Develop documentation with additional topics and categories in the `products.outline.yaml` in the `{{{productId}}}-sidebar` sidebar definition"
{{/with}}
{{/each}}